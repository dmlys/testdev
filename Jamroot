import boost ;
boost.use-project ;

# used by child jamfiles
path-constant SOLUTION_ROOT : . ;

project : default-build <threading>multi $(DEFAULT-BUILD) 
		: build-dir $(DEFAULT-BUILD-DIR) ;

alias extlib-headers : extlib//headers/<extlib-wopenssl>on/<extlib-wzlib>on ;
alias extlib         : extlib//extlib/<extlib-wopenssl>on/<extlib-wzlib>on ;
alias extlib-tests   : extlib//extlib-tests/<extlib-wopenssl>on/<extlib-wzlib>on ;

alias netlib-headers : netlib//headers ;
alias netlib         : netlib//netlib  ;
alias netlib-tests   : netlib//netlib-tests ;

alias tests : extlib-tests netlib-tests ;

local src = main.cpp ;

exe extlibTest
	# sources
	: $(src) extlib netlib 
	  /boost//timer /boost//system
	  
	  /user-config//openssl 
	  /user-config//z
	  /user-config//fmt
	;

explicit extlib-tests ;
explicit netlib-tests ;
explicit tests ;